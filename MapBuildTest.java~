/*

 * 

 */

import java.util.Scanner;

public class MapBuildTest implements Runnable{

	

	//build the map

	//Density argument: 1: low, 2: mid, 3: high


	public static int height;
	public static int width;
	public static int density;	
	
	public static Map m;

	public MapBuildTest(){

		Scanner input=new Scanner(System.in);
		int selection = input.nextInt();
		input.nextLine();
		if (selection == 1){
			System.out.printf("Enter height and width: ");

			height = input.nextInt();
			width= input.nextInt();

			System.out.printf("Enter density: ");
			density = input.nextInt();
		}

		m = new Map(height, width, density);
	}
	

	public void run(){

		m.startPropagation();

	}

	

	//main test function

	public static void main(String args[]) {
		

		System.out.println("Initial Forest Map:");

		m.printTreeMap();

		//m.testEdges();

		

		//int thread_size = 8;

		m.startFire(height/2, width/2);

		

		// declare object to hold the threads

		Thread t = new Thread();

		t = new Thread(new MapBuildTest());
		t.start();

		// create each thread and start it

		/*for (int i = 0; i < thread_size; i++) {

			t[i] = new Thread(new MapBuildTest());

			t[i].start();

		}*/

		// join each thread to halt the process of the main thread until all

		// incrementation is complete

		for (int i = 0; i < 1; i++) {

			try {

				t.join();

			} catch (InterruptedException e) {

				System.out.println("Interrupted Exception Caught");

			}



		}

		System.out.println("Aftermath");

 	}

	

}
